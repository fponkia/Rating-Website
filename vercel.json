{
    "version": 2,
    "builds": [
        {
          "src": "api/*.php",
          "use": "vercel-php@0.7.1"
        },
        {
          "src": "public/**/*",
          "use": "@vercel/static"
        }
      ],
    "routes": [
        { "src": "/api/(.*)",  "dest": "/api/$1" },
        { "src": "/(.*)", "dest": "/public/index.html"},
        { "src": "/public/(.*)", "dest": "/public/$1"}]        
}
